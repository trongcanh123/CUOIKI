<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#809BE8"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#809BE8"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:title="My profile"
            android:layout_height="?attr/actionBarSize"
            android:background="#B7BA9F"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="250dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_marginTop="35dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="Trọng Cảnh"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/fs" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:padding="15dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:text="Email:canhphan2002@gmail.com"
                android:textColor="#1C78C1"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:text="Address: Quảng Nam"
                android:textColor="#1C78C1"
                android:textSize="18dp" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" Enjoy the little things in life, for one day you \n  may lookback and realize they were the big things."
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_marginTop="30dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/custom"
            android:backgroundTint="#2962FF"
            android:text="Follow me" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
